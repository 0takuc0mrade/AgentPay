{
  "compilerOptions": {
    // Modern Node.js settings
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    // Interop settings
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Strictness
    "strict": true,
    "skipLibCheck": true,

    // Output
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}